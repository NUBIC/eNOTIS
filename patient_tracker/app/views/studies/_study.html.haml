#study_full
  %ul.menu
    %li.active
      %a
        General Info
    %li.inactive
      %a
        Study Events
    %li.inactive
      = link_to("Subjects",:controller=> "subjects" , :action =>"index", :irb_number => study.irb_number )
    %li.inactive
      %a
        Subject Events
    %li.inactive
      %a.gray
        Budgeting

  .header_details
    .primary_data
      .status_icon.approved
        Approved
        %small.gray
          mm/dd/yyyy
      .study_id="##{study.irb_number}"
    .secondary_data
      .name
        %em
          Name:
        = study.name  || "Missing"
      .phase
        %em
          Phase:
        = study.phase || "Missing"
      .title
        %em
          Title:
        = study.title || "Missing"
      .pi
        %em
          PI:
        Investigator, Principal
      .coord
        %em
          Study Coord:
        Coordinator, Study

    .tertiary_data
      .description
        %em
          Description:
        = study.description || "Missing"
        
  - if @study.coordinators.map(&:user).include? current_user
