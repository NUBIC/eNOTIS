- content_for :head do
  :javascript
    $(document).ready(function(){$(".display").dataTable();});

#subject_list
  - if @involvements.nil?
    .heading
      You are not authorized to see subjects on this study
  - else
    .heading
      = "My Subjects (#{@involvements.size})"
    %table.display
      %thead
        %th Name
      %tbody  
        - @involvements.each do |i|
          %tr
            %td= render :partial => "partials/subject", :object => i.subject
