- @stylesheets = %w(reset compiled/default compiled/datatables)
- @javascripts = %w(jquery-1.3.2.min jquery.dataTables.min)
- content_for :head do
  :javascript
    $(document).ready(function(){$(".display").dataTable();});
#study_list
  .heading My Studies
  %table.display
    %thead
      %th Study ID
      %th Short title
      %th Status
    %tbody  
      - @accessable_studies.each do |study|
        %tr
          %td= link_to study.irb_number, study_path(study) || "(no id)"
          %td= study.title || "(no title)"
          %td= study.status || "(no status)"
#recent_events
  .heading
    Recent Events
  %ul
    %li= link_to("STU0001924<br/>John Smith AE")
    %li= link_to("STU0001924<br/>Sally Sue Registered")
    %li= link_to("STU00020135<br/>Study approved")
  = link_to "5 more events", "#"

