- if @subject.nil? 
  - form_remote_tag( :url=> involvement_events_path ) do |f| 
    = label_tag 'first_name' 
    = text_field_tag :first_name
    %br
    = label_tag 'last_name' 
    = text_field_tag :last_name
    %br
    = label_tag 'dob', "Date of Birth" 
    = text_field_tag :dob
    %br
    = submit_tag("Add Subject") 
- else
  - form_remote_tag( :url=> involvement_events_path ) do |f| 
    = label_tag 'first_name' 
    = text_field_tag( :first_name, @subject.first_name)
    %br
    = label_tag 'last_name' 
    = text_field_tag( :last_name, @subject.last_name)
    %br
    = label_tag 'dob', "Date of Birth" 
    = text_field_tag( :dob , @subject.birth_date)
    %br
    - if @subject.involvements.size > 0 
      Subject Is Associated with the following studies:
      %ul
      - @subject.involvements.each do |involvement| 
        %li= link_to(involvement.study.name, study_path(involvement.study))
    = submit_tag( "Confirm/Add Subject" ) 
