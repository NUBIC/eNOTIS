!!! XML
!!!
%html
  %head
    %title= "eNotis :: #{@title}"
    =stylesheet_link_tag(@view_stylesheets ||= ["compiled/application", "compiled/main"])
    =javascript_include_tag @view_javascripts ||= ["jquery-1.3.2.min", "jquery-ui-1.7.2.min" ,"jrails", "facebox", "jquery.dataTables.min", "jquery.main","jquery.periodicalupdater"] 
    =yield :head
  %body
    =auto_session_timeout_js  if logged_in?
    #container
      #header
        %span.app_name
          =image_tag("logo_idea1.gif",:alt => "eNOTIS Logo")          
          %em.tagline
            Northwestern University Clinical Subject Registration

      #current_user_badge
        = "#{current_user.name} (#{current_user.netid})"
        |
        = link_to('Logout', logout_authentication_path)
      
      #bridge-nav
        %ul
          %li{:class => nav_class(UsersController)}
            = link_to "Dashboard", dashboard_path
          %li{:class => nav_class(StudiesController)}
            = link_to "All Studies", studies_path
          %li{:class => nav_class(SubjectsController)}
            = link_to "My Subjects", subjects_path
          %li{:class => nav_class(InvolvementEventsController)}
            = link_to "My Events", involvement_events_path
          %li{:class => "search #{nav_class(SearchController)}"}
            = link_to "Search", search_path
            - form_tag(search_path, :method => :get) do 
              =text_field_tag("query")
              =submit_tag("Search")
      - unless (types = flash.keys.select{|k| [:notice, :error, :warning].include?(k)}).blank?
        #flash
          = flash_messages(types)
            
      #main
        =yield

      #footer
        %p
          eNOTIS &mdash; Clinical Subject Registration 
          =app_version_helper
          Created by&nbsp; 
          =link_to("NUBIC")
          &nbsp;for Northwestern University
          &nbsp;&mdash;
          =RAILS_ENV.upcase
