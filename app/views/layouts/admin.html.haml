%html
  %head
    %title= "eNotis :: #{@title}"
    =stylesheet_link_tag(@view_stylesheets ||= ["compiled/application", "compiled/main", "compiled/admin"])
    =javascript_include_tag @view_javascripts ||= ["jquery-1.3.2.min", "jquery.dataTables.min"] 
    =yield :head
  %body
    #container
      #header
        %span.app_name
          =image_tag("logo_idea1.gif",:alt => "eNOTIS Logo")          
          %em.tagline
            Northwestern University Clinical Subject Registration

      #current_user_badge
        = "#{current_user.name} (#{current_user.netid})"
        |
        = link_to('Logout', logout_authentication_path)
      
      - unless (types = flash.keys.select{|k| [:notice, :error, :warning].include?(k)}).blank?
        #flash
          = flash_messages(types)
      
      #bridge-nav
        %a{:href => default_path} &laquo; back to enotis
            
      #main
        =yield

      #footer
        = image_tag("nu_pageheader.jpg")
        %p
          eNOTIS &mdash; Clinical Subject Registration 
          =app_version_helper
          Created by&nbsp; 
          =link_to("NUBIC")
          &nbsp;for Northwestern University
