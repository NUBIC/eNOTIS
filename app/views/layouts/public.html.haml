!!! XML
!!!
%html
  %head
    %title= "eNotis :: #{@title}"
    =stylesheet_link_tag @view_stylesheets ||= ["compiled/application","compiled/public"]
    =javascript_include_tag @view_javascripts || ["jquery-1.3.2.min", "jquery.public"]
    =yield :head
  %body
    #container
      - unless RAILS_ENV == "production"
        #environment{:class => RAILS_ENV}= "eNOTIS is running in #{RAILS_ENV.upcase}"
      #header
        %span.app_name
          =image_tag("enotis_logo1_md.gif",:alt => "eNOTIS Logo")
          %em.tagline
            Northwestern University Clinical Subject Registration

      - unless (types = flash.keys.select{|k| [:notice, :error, :warning].include?(k)}).blank?
        #flash
          = flash_messages(types)
            
      #main
        =yield

      #footer
        .nulogo= image_tag("nu_logo.gif")
        .nucatslogo= image_tag("nucats_logo.gif")
        .nubiclogo= image_tag("nubic_logo.gif")
        %p
          = "eNOTIS &mdash; Clinical Subject Registration #{app_version_helper}"
          = "Created by #{link_to("NUBIC", "http://www.nucats.northwestern.edu/centers/nubic")} for Northwestern University &mdash; #{RAILS_ENV.upcase}"



