- content_for :head do
  :javascript
    $(document).ready(function(){$(".display").dataTable({"sPaginationType": "full_numbers","aoColumns": [{ "sType": "html" }, null, null, null]});});
    
#my_studies
  .heading= "My Studies (#{@studies.size} in total)"
  = render :partial => 'partials/study_table'

#recent_events
  .heading
    Recent Events
  - if @involvement_events.size > 0
    %ul
      - @involvement_events[0,5].each do |event|
        %li= link_to "#{event.involvement.study.irb_number}: #{event.involvement.subject.name}<br/>#{event.term} #{time_ago_in_words(event.occurred_on)} ago", study_path(event.involvement.study)
    - if (more = @involvement_events.size - 5) > 0
      = link_to "#{pluralize(more, "more event")}", involvement_events_path
  - else
    = render :partial => "involvement_events/no_events"

-#user_options
  .heading
    eNotis options:
  %ul
    %li= link_to("view your profile")
    %li= link_to("view your audit history")
    %li= link_to("verify your email address")
    %li= link_to("edit user settings")
