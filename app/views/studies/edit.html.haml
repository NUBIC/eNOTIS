#study_settings
  -if can? :edit, @study
    #event_types
      = render :partial => 'partials/study_event_types', :locals => {:involvement => @study}
  #study_forms
    #pane_menu
      #pane_menu_title="Study Forms"
    %table.display
      %thead
        %tr
          %th Form Title
          %th State
          %th Interface
          %th Active at
          %th Inactive at
      %tbody
        -@study.surveys.each do |survey|
          %tr
            %td=survey.title
            %td=survey.active? ? "Active" : "Inactive"
            %td=survey.is_public ? "coordinator" : "subject"
            %td=survey.active_at.blank? ? "--" : survey.active_at.to_date
            %td=survey.inactive_at.blank? ? "--" : survey.inactive_at.to_date
